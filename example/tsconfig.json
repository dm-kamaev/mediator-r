{
  "compilerOptions": {
    "target": "es2021",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "jest"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*"
  ],
  // "include": ["src/index.ts", "example", "cli.ts"],
  "exclude": [
    "node_modules",
    "./dist",
  ]
}